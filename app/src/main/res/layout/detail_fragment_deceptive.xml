<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/category_toolbar"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/deceptive__"
                android:id="@+id/deceptive_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/store_star"
                android:background="@drawable/select_star"
                android:backgroundTint="@color/colorYellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/store_number"
                android:text="store"
                android:textSize="15dp"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="@id/store_star"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/store_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deceptive_lank"
                android:text="@string/deceptive"
                android:includeFontPadding="false"
                android:textColor="@color/colorRedPink"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/app_font"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/deceptive_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제품명"
                android:id="@+id/detail_title"
                android:textSize="25dp"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/deceptive_lank"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:id="@+id/tag"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/app_font"
                app:cardBackgroundColor="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_title">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="tag" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_1"
                android:id="@+id/detail_deceptive_1"

                android:includeFontPadding="false"
                android:fontFamily="@font/app_font"
                app:layout_constraintTop_toBottomOf="@+id/tag"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_1"
                android:includeFontPadding="false"
                android:fontFamily="@font/app_font"
                android:id="@+id/detail_deceptive_1_content"
                app:layout_constraintTop_toBottomOf="@+id/tag"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_2"
                android:includeFontPadding="false"
                android:fontFamily="@font/app_font"
                android:id="@+id/detail_deceptive_2"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_1_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_2"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:id="@+id/detail_deceptive_2_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_1_content"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_2"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_3"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:id="@+id/detail_deceptive_3"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_2_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_3"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:id="@+id/detail_deceptive_3_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_2_content"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_3"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_4"
                android:id="@+id/detail_deceptive_4"
                android:includeFontPadding="false"
                android:fontFamily="@font/app_font"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_3_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_4"
                android:includeFontPadding="false"
                android:id="@+id/detail_deceptive_4_content"
                android:fontFamily="@font/app_font"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_3_content"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_4"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_5"
                android:id="@+id/detail_deceptive_5"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_4_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_5"
                android:id="@+id/detail_deceptive_5_content"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_4_content"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_5"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_6"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:id="@+id/detail_deceptive_6"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_5_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_deceptive_6"
                android:includeFontPadding="false"
                android:fontFamily="@font/app_font"
                android:id="@+id/detail_deceptive_6_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_5_content"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_6"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/detail_deceptive_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:text="@string/detail_deceptive_7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_6_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/detail_deceptive_7"
                android:id="@+id/detail_deceptive_7_content"
                android:fontFamily="@font/app_font"
                app:layout_constraintTop_toBottomOf="@+id/detail_deceptive_6_content"
                app:layout_constraintStart_toEndOf="@id/detail_deceptive_7"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>