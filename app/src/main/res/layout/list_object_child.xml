<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_child"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/card_list_image_child"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="5dp"
                android:src="@drawable/child" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_list_title_child"
                android:text="@string/card_list_title"
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_list_image_child" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_list_company_child"
                android:text="@string/card_list_company"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/card_list_image_child"
                app:layout_constraintTop_toBottomOf="@id/card_list_title_child" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_list_lank_child"
                android:text="@string/child_full"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/card_list_company_child"
                app:layout_constraintStart_toEndOf="@id/card_list_image_child" />

            <ImageView
                android:id="@+id/store_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/round_star_black_18dp"
                app:layout_constraintStart_toEndOf="@+id/card_list_lank_child"
                app:layout_constraintTop_toBottomOf="@+id/card_list_company_child"
                app:tint="@color/colorYellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="store"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/app_font"
                android:includeFontPadding="false"
                android:id="@+id/store_number"
                app:layout_constraintTop_toBottomOf="@id/card_list_company_child"
                app:layout_constraintStart_toEndOf="@+id/store_star" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/child"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>